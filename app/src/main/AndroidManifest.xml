<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fmu.lordbarber"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <!--Configurações globais em activity-->

        <!--Activity principal-->
        <activity android:name=".activity.activity.Cadastro">

        <!--Activity Outras-->
        </activity>
        <activity android:name=".activity.activity.ModalCliente"
            android:screenOrientation="locked"/>
        <activity android:name=".activity.activity.Agendamento"
            android:screenOrientation="locked"/>
        <activity android:name=".activity.activity.CorteCabelo"
            android:screenOrientation="locked"/>
        <activity android:name=".activity.activity.Servicos"
            android:screenOrientation="locked"/>
        <activity android:name=".activity.activity.Login"
            android:screenOrientation="locked"/>
        <activity
            android:name=".activity.activity.MainActivity"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>