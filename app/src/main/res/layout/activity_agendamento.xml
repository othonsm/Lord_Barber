<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_agendamento"
    tools:context=".activity.activity.Agendamento">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="277dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"

        android:text="Corte de Cabelo"
        android:textAlignment="center"
        android:textSize="20sp"
        app:fontFamily="@font/mbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/icoReturnServico"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:background="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="25dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Selecione um dos horários disponíveis:"
        android:textAlignment="center"
        android:textColor="#F7F7F7"
        android:textSize="17sp"
        app:fontFamily="@font/mregular"
        app:layout_constraintEnd_toEndOf="@+id/calendarView3"
        app:layout_constraintStart_toStartOf="@+id/calendarView3"
        app:layout_constraintTop_toBottomOf="@+id/calendarView3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="338dp"
        android:layout_height="29dp"
        android:layout_marginTop="24dp"
        android:text="Em qual dia você quer ser atendido?"
        android:textColor="#F7F7F7"
        android:textSize="18sp"
        app:fontFamily="@font/mregular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <CalendarView
        android:id="@+id/calendarView3"
        android:layout_width="341dp"
        android:layout_height="303dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_calendar"
        android:dateTextAppearance="@style/TextAppearance.AppCompat.Medium"
        android:minDate="01/01/2020"
        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/button"
        android:layout_width="101dp"
        android:layout_height="46dp"
        android:background="@drawable/btn_background"
        android:text="11:00"
        android:fontFamily="@font/mregular"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/calendarView3"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/btnAgendarCorfirma"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/brn_background_rocho"
        android:fontFamily="@font/mbold"
        android:text="CONFIRMAR AGENDAMENTO"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="101dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/mregular"
        android:text="13:00"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/button6"
        android:layout_width="101dp"
        android:layout_height="46dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/mregular"
        android:text="15:00"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/calendarView3"
        app:layout_constraintTop_toTopOf="@+id/button4" />
</androidx.constraintlayout.widget.ConstraintLayout>